    success: function(data, textStatus, jqXHR) {
        jQuery('#ti_subpage_message').html('Thank you for updating!');
        jQuery('#ti_subpage_form').hide();
        jQuery('#ti_update_form').hide();
         jQuery('#ti_subscribe_loading').hide();


    }
});
});



