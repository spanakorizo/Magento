    <tbody>
    <?php if ($_hasAssociatedProducts): ?>
    <?php $formKey = Mage::getSingleton('core/session')->getFormKey();?>
    <?php foreach ($_associatedProducts as $_item): ?>
        
	<?php //get product url ?>
	<?php $product_url = $_item->getProductUrl();
