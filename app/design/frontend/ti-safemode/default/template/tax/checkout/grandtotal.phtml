/**
 * @var $this Mage_Tax_Block_Checkout_Grandtotal
 * @see Mage_Tax_Block_Checkout_Grandtotal
 */
?>
<?php if ($this->includeTax() && $this->getTotalExclTax()>=0):?>
<tr class="ti_cart_total">
    <td style="<?php echo $this->getStyle() ?>" class="a-right" colspan="<?php echo $this->getColspan(); ?>">
        <h2><?php echo $this->helper('tax')->__('Grand Total Excl. Tax')?>:</h2>
    </td>
    <td style="<?php echo $this->getStyle() ?>" class="a-right">
        <h2><?php echo $this->helper('checkout')->formatPrice($this->getTotalExclTax()) ?></h2>
    </td>
</tr>
<?php echo $this->renderTotals('taxes', $this->getColspan()); ?>
<tr class="ti_cart_total">
    <td style="<?php echo $this->getStyle() ?>" class="a-right" colspan="<?php echo $this->getColspan(); ?>">
        <h2><?php echo $this->helper('tax')->__('Grand Total Incl. Tax')?></h2>
    </td>
    <td style="<?php echo $this->getStyle() ?>" class="a-right">
        <h2><?php echo $this->helper('checkout')->formatPrice($this->getTotal()->getValue()) ?></h2>
    </td>
</tr>
<?php else:?>
<tr class="ti_cart_total">
    <td style="<?php echo $this->getStyle() ?>" class="a-right" colspan="<?php echo $this->getColspan(); ?>">
        <h2><?php echo $this->getTotal()->getTitle() ?></h2>
    </td>
    <td style="<?php echo $this->getStyle() ?>" class="a-right">
        <h2><?php echo $this->helper('checkout')->formatPrice($this->getTotal()->getValue()) ?></h2>
    </td>
</tr>
<?php endif;?>
