<?xml version="1.0"?>
<config>
    <modules>
        <Xtento_EnhancedGrid>
            <version>1.4.6</version>
        </Xtento_EnhancedGrid>
    </modules>
    <global>
        <helpers>
            <xtento_enhancedgrid>
                <class>Xtento_EnhancedGrid_Helper</class>
            </xtento_enhancedgrid>
        </helpers>
        <blocks>
            <xtento_enhancedgrid>
                <class>Xtento_EnhancedGrid_Block</class>
            </xtento_enhancedgrid>
        </blocks>
        <models>
            <xtento_enhancedgrid>
                <class>Xtento_EnhancedGrid_Model</class>
                <resourceModel>xtento_enhancedgrid_mysql4</resourceModel>
            </xtento_enhancedgrid>
            <xtento_enhancedgrid_mysql4>
                <class>Xtento_EnhancedGrid_Model_Mysql4</class>
                <entities>
                    <grid>
                        <table>xtento_enhancedgrid_grid</table>
                    </grid>
                    <columns>
                        <table>xtento_enhancedgrid_grid_columns</table>
                    </columns>
                </entities>
            </xtento_enhancedgrid_mysql4>
        </models>
        <resources>
            <xtento_enhancedgrid_setup>
                <setup>
                    <module>Xtento_EnhancedGrid</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </xtento_enhancedgrid_setup>
            <xtento_enhancedgrid_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </xtento_enhancedgrid_write>
            <xtento_enhancedgrid_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </xtento_enhancedgrid_read>
        </resources>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <xtento_enhancedgrid>
                    <file>xtento/enhancedgrid.xml</file>
                </xtento_enhancedgrid>
            </updates>
        </layout>
        <translate>
            <modules>
                <Xtento_EnhancedGrid>
                    <files>
                        <default>Xtento_EnhancedGrid.csv</default>
                    </files>
                </Xtento_EnhancedGrid>
            </modules>
        </translate>
        <events>
            <core_config_data_save_after>
                <observers>
                    <xtento_enhancedgrid>
                        <type>model</type>
                        <class>Xtento_EnhancedGrid_Model_System_Config_Backend_Import_Enabled</class>
                        <method>has_value_for_configuration_changed</method>
                    </xtento_enhancedgrid>
                </observers>
            </core_config_data_save_after>
            <core_block_abstract_to_html_after>
                <observers>
                    <xtento_enhancedgrid>
                        <type>singleton</type>
                        <class>xtento_enhancedgrid/observer</class>
                        <method>coreBlockAbstractToHtmlAfter</method>
                    </xtento_enhancedgrid>
                </observers>
            </core_block_abstract_to_html_after>
            <adminhtml_block_html_before>
                <observers>
                    <xtento_enhancedgrid>
                        <type>singleton</type>
                        <class>xtento_enhancedgrid/observer</class>
                        <method>adminhtmlBlockHtmlBefore</method>
                    </xtento_enhancedgrid>
                </observers>
            </adminhtml_block_html_before>
            <core_block_abstract_prepare_layout_after>
                <observers>
                    <xtento_enhancedgrid>
                        <type>singleton</type>
                        <class>xtento_enhancedgrid/observer</class>
                        <method>coreBlockAbstractPrepareLayoutAfter</method>
                    </xtento_enhancedgrid>
                </observers>
            </core_block_abstract_prepare_layout_after>
            <controller_action_predispatch>
                <observers>
                    <xtento_enhancedgrid>
                        <type>singleton</type>
                        <class>xtento_enhancedgrid/observer</class>
                        <method>controllerActionPredispatch</method>
                    </xtento_enhancedgrid>
                </observers>
            </controller_action_predispatch>
            <core_collection_abstract_load_before>
                <observers>
                    <xtento_enhancedgrid>
                        <type>singleton</type>
                        <class>xtento_enhancedgrid/observer</class>
                        <method>coreCollectionAbstractLoadBefore</method>
                    </xtento_enhancedgrid>
                </observers>
            </core_collection_abstract_load_before>
            <controller_action_predispatch_adminhtml>
                <observers>
                    <controller_action_predispatch_adminhtml_enhancedgrid>
                        <type>model</type>
                        <class>xtento_enhancedgrid/observer</class>
                        <method>controllerActionPredispatchAdminhtml</method>
                    </controller_action_predispatch_adminhtml_enhancedgrid>
                </observers>
            </controller_action_predispatch_adminhtml>
        </events>
        <!-- Following: Compatibility fix for Magento version 1.3 -->
        <menu>
            <system>
                <children>
                    <xtento_extensions translate="title">
                        <title>XTENTO Extensions</title>
                        <sort_order>1</sort_order>
                        <children>
                            <enhancedgrid translate="title">
                                <title>Enhanced Order Grid</title>
                                <sort_order>250</sort_order>
                                <action>adminhtml/system_config/edit/section/enhancedgrid</action>
                            </enhancedgrid>
                        </children>
                    </xtento_extensions>
                </children>
            </system>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <enhancedgrid translate="title">
                                            <title>XTENTO Enhanced Sales Grid</title>
                                            <sort_order>1</sort_order>
                                        </enhancedgrid>
                                    </children>
                                </config>
                                <xtento_extensions translate="title">
                                    <title>XTENTO Extensions</title>
                                    <sort_order>1</sort_order>
                                    <children>
                                        <enhancedgrid translate="title">
                                            <title>Enhanced Sales Grid</title>
                                            <sort_order>250</sort_order>
                                            <action>adminhtml/system_config/edit/section/enhancedgrid</action>
                                        </enhancedgrid>
                                    </children>
                                </xtento_extensions>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Xtento_EnhancedGrid before="Mage_Adminhtml">Xtento_EnhancedGrid_Adminhtml</Xtento_EnhancedGrid>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
    </default>
</config>
